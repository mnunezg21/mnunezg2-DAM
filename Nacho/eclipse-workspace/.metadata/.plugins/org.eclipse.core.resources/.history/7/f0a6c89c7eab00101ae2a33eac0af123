package LeerFicheroImagen;

import java.io.FileInputStream;
import java.io.IOException;

public class Main {
	public static void main(String[] args) {
        String ruta = "img.png"; // Cambia por la ruta de tu imagen

        try (FileInputStream fileInput = new FileInputStream(ruta)) {
            int byteLeido;
            int contador = 0;

            System.out.println("Contenido binario del fichero de imagen (en bytes):");

            // Leer byte a byte
            while ((byteLeido = fileInput.read()) != -1) {
                System.out.printf("%02X ", byteLeido); // Mostrar como hexadecimal
                contador++;

                // Cada 16 bytes, hacer un salto de l√≠nea
                if (contador % 16 == 0) {
                    System.out.println();
                }
            }

        } catch (IOException e) {
            System.err.println("Error al leer el archivo: " + e.getMessage());
        }
    }

}
